{
  "name": "workday-nlui-studio",
  "description": "A local, browser-based design studio that turns natural-language prompts into authentic Workday UI using React, Vite, AI, and Canvas Kit v14 with official fonts and design system.",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/server.ts",
    "build": "tsc && vite build && tsc -p server/tsconfig.json",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "node dist-server/server.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"server/**/*.ts\""
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@workday/canvas-accent-icons-web": "^3.0.17",
    "@workday/canvas-applet-icons-web": "^2.0.15",
    "@workday/canvas-kit-preview-react": "^14.0.2",
    "@workday/canvas-kit-react": "^14.0.2",
    "@workday/canvas-kit-react-fonts": "^14.0.2",
    "@workday/canvas-system-icons-web": "^3.0.36",
    "@workday/canvas-tokens-web": "^3.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
